<layout>
    <data>
        <variable
            name="contact"
            type="com.example.dataentryassignment.activities.ViewContactDetailActivity" />
    </data>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ViewContactDetailActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="View Contact Detail"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="Dummy Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_contact_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="Mobile Number"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/text_view_contact_number2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="Mobile Number"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/text_view_contact_number3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="Mobile Number"
        android:textSize="20sp" />


</LinearLayout>
</layout>